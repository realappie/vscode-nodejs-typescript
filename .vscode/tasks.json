{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "typescript",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "typescript-watch",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "nodemon",
            "type": "npm",
            "script": "debug",
            "problemMatcher": [],
            "options": {
              "shell": {}
            }
        },
        {
            "label": "run",
            "dependsOn": [
                "node-path",
                "typescript-watch",
                "nodemon"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}